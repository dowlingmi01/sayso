{
	"table": [
		{
			"tablename": "Economy",
			"permissions":[
				"allowgrid",
				"allowadd",
				"allowdelete",
				"allowedit",
				"allowdetails"
			]
		}
	],
	"columns": [
		{
			"colname": "id",
			"type": "hidden",

			"displaywhen": [
				"grid",
				"detail",
				"delete",
				"edit"
			]
		},
		{
			"colname": "title",
			"type": "text",
			"width": 62,
			"filterwidth":62,
			"validate": [
				"notnull",
				"minlength(5)"
			],
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"delete",
				"edit"
			]
		},
		{
			"colname": "redeemable_currency",
			"type": "text",
			"label": "Label",
			"width": 42,
			"validate": [
				"notnull"
			],
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"delete",
				"edit"
			]
		},
		{
			"colname": "experience_currency",
			"type": "text",
			"label": "Label",
			"width": 42,
			"validate": [
				"notnull"
			],
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"delete",
				"edit"
			]
		},
		{
			"colname": "name",
			"type": "text",
			"width": 42,
			"validate": [
				"notnull",
				"minlength(5)"
			],
			"displaywhen": [
				"add",
				"detail",
				"delete",
				"edit"
			]
		}
	]
}