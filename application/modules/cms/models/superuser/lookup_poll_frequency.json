				"allowgrid",
				"allowadd",
				"allowdelete",
				"allowedit",
				"disallowdetails"
			]
		}
	],
	"columns": [
		{
			"colname": "id",
			"type": "hidden",

			"displaywhen": [
				"grid",
				"detail",
				"edit"
			]
		},
		{
			"colname": "short_name",
			"type": "text",
			"label": "Short Name",
			"width": 30,
			"filterwidth":40,
			"validate": [
				"notnull",
				"minlength(10)"
			],
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"edit"
			]
		},
		{
			"colname": "label",
			"type": "text",
			"label": "Label",
			"width": 42,
			"filterwidth":40,
			"validate": [
				"notnull",
				"minlength(10)"
			],
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"edit"
			]
		},
		{
			"colname": "description",
			"type": "text",
			"width": 60,
			"validate": [
				"notnull",
				"minlength(10)"
			],
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"edit"
			]
		},
		{
			"colname": "extra",
			"type": "text",
			"width": 42,
			"validate": [
				"notnull",
				"minlength(10)"
			],
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"edit"
			]
		},
		{
			"colname": "default_frequency",
			"label":"Default",
			"type": "checkbox",
			"filterwidth":30,
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"edit"
			]
		}
	]
}