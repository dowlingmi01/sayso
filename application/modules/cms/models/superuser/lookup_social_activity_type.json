				"detail",
				"edit"
			]
		},
		{
			"colname": "short_name",
			"type": "text",
			"label": "Short Name",
			"width": 80,
			"validate": [
				"notnull",
				"minlength(10)"
			],
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"edit"
			]
		},
		{
			"colname": "label",
			"type": "text",
			"label": "Label",
			"width": 80,
			"validate": [
				"notnull",
				"minlength(10)"
			],
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"edit"
			]
		},
		{
			"colname": "description",
			"type": "text",
			"label": "Description",
			"width": 80,
			"validate": [
				"notnull",
				"minlength(10)"
			],
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"edit"
			]
