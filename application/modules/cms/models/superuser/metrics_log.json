{
	"table": [
		{
			"tablename": "metrics_log",
			"permissions":[
				"allowgrid",
				"disallowadd",
				"disallowdelete",
				"disallowedit",
				"disallowdetails"
			]
		}
	],
	"columns": [
		{
			"colname": "id",
			"type": "hidden",
			"width": 5,
			"displaywhen": [
				"grid",
				"detail"
			]
		},
		{
			"colname": "content",
			"type": "text",
			"label": "Content",
			"width": 40,
			"validate": [
				"notnull",
				"minlength(10)"
			],
			"displaywhen": [
				"grid",
				"detail"
			]
		}
	]
}