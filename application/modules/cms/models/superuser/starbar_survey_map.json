{
	"table": [
		{
			"tablename": "starbar_survey_map",
			"model": "Starbar_SurveyMap",
			"permissions":[
				"allowgrid",
				"allowadd",
				"allowdelete",
				"allowedit",
				"allowdetails"
			]
		}
	],
	"columns": [
		{
			"colname": "id",
			"type": "hidden",

			"displaywhen": [
				"grid",
				"subgrid",
				"detail",
				"delete",
				"edit"
			]
		},
		{
			"colname": "survey_id",
			"label": "Survey/Poll/Quiz",
			"type": "fkey",
			"lookuptable": "survey",
			"lookupfield": "id",
			"lookuplabel": "title",
			"default": "--Please Select a survey--",
			"displaywhen": [
				"add",
				"grid",
				"subgrid",
				"detail",
				"delete",
				"edit"
			],
			"attributes": [
				"writeonly"
			]
		},
		{
			"colname": "starbar_id",
			"filterwidth":40,
			"type": "fkey",
			"lookuptable": "starbar",
			"lookupfield": "id",
			"lookuplabel": "label",
			"default": "--Please Select a starbar--",
			"displaywhen": [
				"add",
				"grid",
				"subgrid",
				"detail",
				"edit"
			]
		},
		{
			"colname": "start_day",
			"type": "number",
			"width": 50,
			"filterwidth":20,
					"validate": [
				"notnull",
				"minlength(10)"
			],
			"help": "Day (relative to the selected starbar's launch) that this survey is available. Day 1 = launch day",
			"displaywhen": [
				"add",
				"detail",
				"grid",
				"subgrid",
				"edit"
			]
		},
		{
			"colname": "start_after",
			"type": "number",
			"help": "Time delay in seconds before this survey is available to a new user",
			"displaywhen": [
				"add",
				"detail",
				"edit"
			]
		},
		{
			"colname": "start_at",
			"type": "datetime",
			"help": "Specific time to start showing this survey at on the selected starbar",
			"displaywhen": [
				"add",
				"detail",
				"edit"
			]
		},
			{
			"colname": "end_at",
			"type": "datetime",
			"help": "Specific time to stop showing this survey at on the selected starbar",
			"displaywhen": [
				"add",
				"detail",
				"edit"
			]
		},
		{
			"colname": "ordinal",
			"type": "number",
			"help": "Order of this survey relative to other surveys on the selected starbar",
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"edit"
			]
		}
	]
}
