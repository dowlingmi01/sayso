{
	"table": [
		{
			"tablename": "Survey",
			"model": "Survey",
			"permissions":[
				"allowgrid",
				"allowadd",
				"allowdelete",
				"allowedit",
				"allowdetails"
			]
		}
	],
	"columns": [
		{
			"colname": "id",
			"type": "hidden",

			"displaywhen": [
				"grid",
				"detail",
				"delete",
				"edit"
			]
		},
		{
			"colname": "user_id",
			"type": "hidden",
			"value": 1,
			"displaywhen": [
				"add",
				"detail",
				"delete",
				"edit"
			]
		},
		{
			"colname": "type",
			"type": "list",
			"listoptions": [
				"poll",
				"survey"
			],
			"displaywhen": [
				"add",
				"grid",
				"edit",
				"delete",
				"detail"
			]
		},
		{
			"colname": "status",
			"type": "list",
			"listoptions": [
				"active",
				"inactive"
			],
			"default": "active",
			"displaywhen": [
				"add",
				"detail",
				"edit"
			]
		},
		{
			"colname": "title",
			"type": "text",
			"label": "Survey Title",
			"width": 600,
			"filterwidth":250,
			"validate": [
				"notnull",
				"minlength(10)"
			],
			"displaywhen": [
				"add",
				"grid",
				"delete",
				"detail",
				"edit"
			]
		},
		{
			"colname": "external_id",
			"type": "number",
			"width":40,
			"filterwidth":40,
			"help": "Used for polls/surveys only -- ignored for quizzes",
			"displaywhen": [
				"add",
				"detail",
				"grid",
				"delete",
				"edit"
			]
		},
		{
			"colname": "external_key",
			"type": "text",
			"width": 360,
			"help": "Used for polls/surveys only -- ignored for quizzes",
			"displaywhen": [
				"add",
				"detail",
				"edit"
			]
		},
		{
			"colname": "reward_category",
			"type": "list",
			"listoptions": [
				"standard",
				"premium",
				"profile"
			],
			"default": "standard",
			"displaywhen": [
				"add",
				"detail",
				"edit"
			]
		},
		{
			"colname": "display_number_of_questions",
			"type": "number",
			"displaywhen": [
				"detail",
				"edit"
			]
		}
	],
	"subobjects": [
		{
			"Title":"Starbars",
			"table": "starbar_survey_map",
			"fk": "survey_id"
		},
		{
			"Title":"Questions",
			"table": "survey_question",
			"fk": "survey_id"
		}
	]
}
