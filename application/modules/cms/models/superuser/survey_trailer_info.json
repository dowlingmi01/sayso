{
		"table": [
		{
			"tablename": "survey_trailer_info",
			"model": "Survey_TrailerInfo",
			"permissions": [
				"allowgrid",
				"allowadd",
				"allowdelete",
				"allowedit",
				"allowduplicate",
				"allowdetails"
			]
		}
	],
	"columns": [
		{
			"colname": "id",
			"type": "hidden",
			"width": 5,
			"displaywhen": [
				"grid",
				"subgrid",
				"edit",
				"detail"
			]
		},
		{
			"colname": "survey_id",
			"type": "fkey",
			"lookuptable": "survey",
			"lookupfield": "id",
			"lookuplabel": "title",
			"default": "--Please Select a Survey--",
			"displaywhen": [
				"add",
				"grid",
				"detail",
				"duplicate",
				"edit"
			],
			"attributes": [
				"writeonly"
			]
		},
		{
			"colname": "entertainment_title",
			"type": "text",
			"width": 600,
			"label": "Movie/Game Title",
			"validate": [
				"notnull"
			],
			"displaywhen": [
				"add",
				"grid",
				"subgrid",
				"detail",
				"duplicate",
				"edit"
			]
		},
		{
			"colname": "category",
			"type": "list",
			"listoptions": [
				"pre-release movie",
				"current movie",
				"sneak-peek movie",
				"retro movie",
				"pre-release game",
				"current game",
				"sneak-peek game",
				"retro game",
				"pre-release TV show",
				"current TV show",
				"sneak-peek TV show",
				"retro TV show",
				"pre-release music video",
				"current music video",
				"sneak-peek music video",
				"retro music video"
			],
			"default": "retro movie",
			"displaywhen": [
				"add",
				"detail",
				"duplicate",
				"edit"
			]
		},
		{
			"colname": "wraparound_id",
			"filterwidth":40,
			"label": "Wrap-around Survey",
			"type": "fkey",
			"lookuptable": "survey",
			"lookupfield": "id",
			"lookuplabel": "title",
			"lookuporder": "title ASC",
			"where": "type='wrap-around'",
			"default": "--Please Select a wrap-around survey--",
			"displaywhen": [
				"add",
				"detail",
				"delete",
				"duplicate",
				"edit"
			],
			"attributes": [
				"writeonly"
			]
		},
			{
			"colname": "video_key",
			"type": "text",
			"label": "Video Key",
			"help": "If video URL is www.youtube.com/watch?v=ABCDEFGHIJK, the video key is ABCDEFGHIJK",
			"validate": [
				"notnull",
				"minlength(11)"
			],
			"displaywhen": [
				"add",
				"detail",
				"duplicate",
				"edit"
			]
		},
		{
			"colname": "related_survey_id",
			"filterwidth":40,
			"label": "Extra Credit Survey",
			"type": "fkey",
			"lookuptable": "survey",
			"lookupfield": "id",
			"lookuplabel": "title",
			"lookuporder": "title ASC",
			"where": "type='survey' and status='active' and processing_status='completed' and (end_at > curdate() or end_at = 0)",
			"default": "--Please Select an Extra Credit follow-on survey--",
			"displaywhen": [
				"add",
				"detail",
				"delete",
				"duplicate",
				"edit"
			]
		},
		{
			"colname": "related_survey",
			"type": "text",
			"width": 600,
			"label": "Extra Credit Text",
			"help": "Enter the text which will become the link for the extra credit survey",
			"displaywhen": [
				"add",
				"grid",
				"subgrid",
				"detail",
				"duplicate",
				"edit"
			]
		},
		{
			"colname": "start_date",
			"filterwidth":110,
			"type": "datetime",
			"validate": [
				"notnull"
			],
			"displaywhen": [
				"grid",
				"add",
				"detail",
				"subgrid",
				"duplicate",
				"edit"
			]
		},
		{
			"colname": "end_date",
			"filterwidth":110,
			"type": "datetime",
			"validate": [
				"notnull"
			],
			"displaywhen": [
				"grid",
				"add",
				"detail",
				"subgrid",
				"duplicate",
				"edit"
			]
		}
	]
}
