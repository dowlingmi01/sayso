<script>
/* On Document Ready, first we hide the carousel according to the flow.  */

var player;
var defaults	=	{ 
		vid : 'HGekjZd5LPk'
};
var answers		=	{
	q1	:	false,
	q2	:	false,
	q3	:	false	
};

$('input.sb_rating').bind('change' , function(){
	
	answers.q1	=	$(this).val();

	if( answers.q1 ) {
		
		$('#sb_vid_question_phase1').hide();
		$('#sb_vid_question_phase2').show();
		
	}
});

$('input.sb_seen_or_not').bind('change', function(){
	answers.q2	=	$(this).val();

	if(answers.q2) {
		
		$('#sb_vid_question_phase1').hide();
		$('#sb_vid_question_phase2').hide();
		$('#sb_vid_question_final').show();
		$('.sb_video_carousel').show();
		
	}
});


function onYouTubePlayerAPIReady() {

  player = new YT.Player('sb_video_container', {
	  
    height: '390',
    width: '635',
    videoId: defaults.vid,
    events: {
        'onReady': onPlayerReady,
        'onStateChange': onPlayerStateChange
      },
      playerVars : {
        'iv_load_policy' :	3
      }
        
  });
  
  setTimeout(function(){
  	getVideoInfo(defaults.vid); 
  }, 700);
  
}

function onPlayerReady(event) {
	event.target.playVideo();
}

function onPlayerStateChange(event) {

	if(event.data == YT.PlayerState.ENDED){
		
		$('input.sb_rating').removeAttr('disabled');
		$('.sb_mv_questions_flow p').removeClass('inactive');
		
	}
	
}

$('.thumb').click(function(){

	answers.q1 	= 	false;
	answers.q2	=	false;
	answers.q3	=	false;

	$('.sb_sel_vid_title').empty().html("");
	$('#sb_vid_question_phase1').show();
	$('#sb_vid_question_phase2').hide();
	$('#sb_vid_question_final').hide();
	$('.sb_video_carousel').hide();
	
	var vid		=	$(this).attr('id');
    player.stopVideo();
    player.loadVideoById( vid );

    setTimeout(function(){
    	getVideoInfo(vid);
    }, 700);
   	 

});

$('.arrow_left, .arrow_right').bind('click', function(){

	var selected	=	false;
	var prev		=	false;
	var next		=	false;
	var dir 		= 	$(this).attr('class').split("_")[1];
	
	if($('.line_group.active').length > 0)					selected =	$('.line_group.active');
	if( $(selected[0].previousElementSibling).length > 0 ) 	prev	 = 	$(selected[0].previousElementSibling);
	if( $(selected[0].nextElementSibling).length > 0 ) 		next 	 = 	$(selected[0].nextElementSibling);
	
	switch(dir)
	{
		case 'left' :
			
				if( prev !== false ) {
					$('.line_group').hide();
					selected.removeClass('active');
					prev.addClass('active');
					$('.line_group.active').fadeIn("slow");
				}
			
		break;
			
		case 'right' :
			
				if( next !== false ) {
					$('.line_group').hide();
					selected.removeClass('active');
					next.addClass('active');
					$('.line_group.active').fadeIn("slow");
				}
				
		break;
	}
	
});

function getVideoInfo(video_id)
{
	$.getJSON('http://gdata.youtube.com/feeds/api/videos/'+video_id+'?v=2&alt=jsonc', function(d){

		if(d.data.title)
		{
			$('#individual_vid_title').html( d.data.title );
			$('.sb_sel_vid_title').html( d.data.title );
		}
		else
		{
			$('#individual_vid_title').empty().html("");
			$('.sb_sel_vid_title').empty().html("");
		}
		
	});	
}
</script>